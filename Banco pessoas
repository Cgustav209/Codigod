CREATE DATABASE bancopessoas;
USE bancopessoas;

CREATE TABLE cliente (
	id_cliente INT PRIMARY KEY AUTO_INCREMENT,
    nome_cliente VARCHAR(250),
    sexo VARCHAR(20),
    data_nascimento DATE,
    email  VARCHAR(250),
    telefone VARCHAR(12),
    endereço VARCHAR(500),
    cidade VARCHAR(150),
    cliente_ativo BOOLEAN,
    idade INT
    
);
ALTER TABLE cliente
MODIFY sexo VARCHAR(20);
ALTER TABLE cliente change endereço endereco VARCHAR(500);
ALTER TABLE cliente;

SELECT * FROM cliente;
TRUNCATE TABLE cliente;
